{% extends 'base.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Enregistrement</h1>
    <label for="inputLogin">Adresse email</label>
    <input type="email" name="login" id="inputLogin" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <div>
        <label for="inputNom">Nom</label>
        <input type="text" name="nom" id="inputNom" class="form-control" required>
        <label for="inputPrenom">Prenom</label>
        <input type="text" name="prenom" id="inputPrenom" class="form-control" required>

    </div>

   
    <label for="inputPseudo">pseudo (optionnel)</label>
    <input type="text" name="pseudo" id="inputPseudo" class="form-control">

    <label for="inputIdMembre">NÂ° membre (optionnel)</label>
    <input type="text" name="idMembre" id="inputIdMembre" class="form-control">

<div>
<input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</div>
    

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
